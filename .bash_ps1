alias ps1reload='PS1="\[\e[01;30m\]\t \[\e[0;30m\][\[${RED}\]\W\[${BLACK}\]]`[[ $(git status 2> /dev/null | head -n2 | tail -n1) != "# Changes to be committed:" ]] && echo "\[\e[91m\]" || echo "\[\e[32m\]"``[[ $(git status 2> /dev/null | tail -n1) != "nothing to commit (working directory clean)" ]] || echo "\[\e[32m\]"`$(__git_ps1 " (%s)\[\e[00m\]") ❯❯❯ \[${BLACK}\]"'


source ~/.git-completion.bash
source ~/.git-prompt.sh

GIT_PS1_SHOWDIRTYSTATE=1
GIT_PS1_SHOWCOLORHINT=1
GIT_PS1_DESCRIBE_STYLE="branch"

BLACK=$(tput setaf 0)
RED=$(tput setaf 1)
PS1="\[\e[01;30m\]\t \[\e[0;30m\][\[${RED}\]\W\[${BLACK}\]]`[[ $(git status 2> /dev/null | head -n2 | tail -n1) != "# Changes to be committed:" ]] && echo "\[\e[91m\]" || echo "\[\e[32m\]"``[[ $(git status 2> /dev/null | tail -n1) != "nothing to commit (working directory clean)" ]] || echo "\[\e[32m\]"`$(__git_ps1 " (%s)\[\e[00m\]")\[\e[00m\] ❯❯❯ \[${BLACK}\]"
PROMPT_COMMAND=ps1reload

PROMPT_COMMAND="${PROMPT_COMMAND:+$PROMPT_COMMAND ; }"'echo `dt` `pwd` $$ $USER \
               "$(history 1)" >> ~/.bash_eternal_history'
